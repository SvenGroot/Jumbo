<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <section name="tkl.jumbo" type="Tkl.Jumbo.JumboConfiguration, Tkl.Jumbo"/>
    <section name="tkl.jumbo.dfs" type="Tkl.Jumbo.Dfs.DfsConfiguration, Tkl.Jumbo.Dfs"/>
  </configSections>

  <tkl.jumbo configSource="common.config"/>
  <tkl.jumbo.dfs configSource="dfs.config"/>
  
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{LogDirectory}log-NameServer-%property{LocalHostName}.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline"/>
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="FileAppender"/>
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0.30319" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
