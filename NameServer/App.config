<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="tkl.jumbo.dfs" type="Tkl.Jumbo.Dfs.DfsConfiguration, Tkl.Jumbo.Dfs"/>
  </configSections>
  
  <tkl.jumbo.dfs>
    <nameServer hostName="localhost" port="9000" blockSize="67108864" replicationFactor="1" listenIPv4AndIPv6="true" editLogDirectory="D:\jumbo" />
  </tkl.jumbo.dfs>
  
  <log4net>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="log-NameServer.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline" />
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{ClientHostName}] - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>
</configuration>